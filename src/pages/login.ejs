<%- include("templates/cabecera", {tituloWeb: 'Iniciar sesión'}) %>

<div class="login">
    <div class="form-container">
        <h1>Iniciar sesión</h1>
        <p>Ingresa tus credenciales para acceder al área de administración</p>
        <form id="login-form">
            <label for="username">Usuario</label>
            <input type="text" name="username" id="username" placeholder="Nombre de usuario">
            <label for="password">Contraseña</label>
            <input type="password" name="password" id="password" placeholder="Contraseña">
            <button type="submit" id="button-login">Iniciar sesión</button>
        </form>
        <p class="error escondido" id="error-message">Error al iniciar sesión</p>
    </div>
</div>

<script src="/Funciones/login.js"></script>
